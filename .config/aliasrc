alias cp="cp -i"
alias mv="mv -i"
alias rmdir='rm -r'

alias dfx='dotfiles r'

alias cls='clear'
alias del='rm -r'
alias move='mv'
alias copy='cp'
alias c="cat"
alias t="touch"

alias home="cd $HOME"
alias neo="clear && neofetch"
alias v='vim'
alias weather='cls && curl wttr.in'
alias py='python3'

alias g="git"

alias df='df -h'
alias free='free -m'

case "$(uname -s)" in 

Darwin)
    alias ls='ls -G'
    ;;

Linux)
    alias ls='ls --color=auto'
    ;;

esac
