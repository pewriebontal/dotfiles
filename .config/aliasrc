alias cp="cp -i"
alias mv="mv -i"
alias rmdir='rm -r'

alias cls='clear'
alias del='rm -r'
alias move='mv'
alias copy='cp'

alias home="cd $HOME"
alias neo="clear && neofetch"

alias g="git"
alias dotfilesc="git --git-dir=$DOTFILES_PATH --work-tree=$HOME"

alias df='df -h'
alias free='free -m'

case "$(uname -s)" in 

Darwin)
    alias ls='ls -G'
    ;;

Linux)
    alias ls='ls --color=auto'
    ;;

esac
